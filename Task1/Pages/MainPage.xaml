<Page x:Class="Task1.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Task1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Главная">

    <StackPanel VerticalAlignment="Center">
        <Button x:Name="RegButton" Content="Авторизация" HorizontalAlignment="Center" Click="RegButton_Click"/>
        <Button x:Name="LogButton" Content="Регистрация" HorizontalAlignment="Center" Click="LogButton_Click"/>
        <Button x:Name="SetButton" Content="Настройки" HorizontalAlignment="Center" Click="SetButton_Click"/>
    </StackPanel>
</Page>
